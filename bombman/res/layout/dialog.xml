<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
 android:background="@drawable/dlgbg"
  >
  <LinearLayout 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingTop="10dp" android:id="@+id/linearLayout2">
  <TextView 
	android:id="@+id/timeViewDlg"
	android:background="@drawable/timebg2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="TIME:01-20"
	android:textColor="@android:color/black"
	android:gravity="center"
	/>
  <TextView 
	android:id="@+id/scoreViewDlg"
	android:background="@drawable/timebg2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="SCORE:0"
	android:textColor="@android:color/black"
	android:gravity="center"/>
	<ImageView 
	android:id="@+id/star"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/star0"
	android:layout_gravity="center_horizontal"/>
	</LinearLayout>
  <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_marginBottom="16dp" android:id="@+id/linearLayout1">
      <Button android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:background="@drawable/replay" android:id="@+id/replayButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
      <Button android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:background="@drawable/menu" android:id="@+id/menuButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
      <Button android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:background="@drawable/next" android:id="@+id/nextButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
      
  </LinearLayout>
  <ImageView android:layout_width="wrap_content" android:background="@drawable/dialogpic" android:id="@+id/dialogPic" android:layout_height="wrap_content" android:layout_above="@+id/linearLayout1" android:layout_toRightOf="@+id/linearLayout2"></ImageView>
</RelativeLayout>
